{
"extends": "ts-node/node16/tsconfig.json",

  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "files": true,
  },

  "compilerOptions": {
    "skipLibCheck": true,                            
    "target": "ES6",                                
    "module": "CommonJS",                           
    "moduleResolution": "node",
    "allowJs": false,
    "esModuleInterop": true,                         
    "outDir": "./dist/src",                           
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,         
    "strict": true,          
    "resolveJsonModule": true                        
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}
